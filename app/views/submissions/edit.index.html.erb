<h2>Edit Submission</h2>
<div class="form">

<%= form_for @submission do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label "Image url" %>
  <%= f.text_field :url %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.submit :class => "submit-button"%>
<% end %>
</div>
<br>
<div class="form">

<%= form_for @submission, method: :delete do |f| %>
  <%= f.submit "delete", class: "delete", :class => "submit-button" %>
<% end %>
</div>
